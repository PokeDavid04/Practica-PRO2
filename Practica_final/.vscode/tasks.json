{
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "command": "/usr/bin/g++",
            "args": [
                "-D_JUDGE_",
                "-D_GLIBCXX_DEBUG",
                "-O2",
                "-Wall",
                "-Wextra",
                "-Werror",
                "-Wno-sign-compare",
                "-std=c++11",
                "-fdiagnostics-color=always",
                "-g",
                "*.cc",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tarea generada por el depurador."
        }
    ],
    "version": "2.0.0"
}